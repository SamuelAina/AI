<h2>Editable Table</h2>
<table id="editableTable">
    <thead>
        <tr>
            <th>User Role</th>
            <th>Button</th>
            <th>Status</th>
            <th>Visibility</th>
        </tr>
    </thead>
    <tbody>
        <!-- Rows will be added dynamically here -->
    </tbody>
</table>
<button onclick="addRow()">Add New Row</button>
<script src="script.js"></script>
</body>
