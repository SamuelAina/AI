document.addEventListener('DOMContentLoaded', (event) => {
    const button = document.getElementById('myButton');
    button.style.display = 'block'; // Make the button visible
    button.style.margin = '0 auto'; // Center the button horizontally
    button.style.position = 'absolute'; // Centering vertically needs absolute positioning
    button.style.top = '50%'; 
    button.style.left = '50%'; 
    button.style.transform = 'translate(-50%, -50%)'; // Adjust the position to truly center
});
