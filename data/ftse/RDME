window.onload = function() {
    // Initialize with a default row
    addRow("Country User (Requester)", "Update", "New Request", "TRUE");
}

function addRow(userRole = '', button = '', status = '', visibility = '') {
    const table = document.getElementById("editableTable").getElementsByTagName('tbody')[0];
    const newRow = table.insertRow(table.rows.length);
    
    let cell1 = newRow.insertCell(0);
    let cell2 = newRow.insertCell(1);
    let cell3 = newRow.insertCell(2);
    let cell4 = newRow.insertCell(3);

    cell1.contentEditable = true;
    cell2.contentEditable = true;
    cell3.contentEditable = true;
    cell4.contentEditable = true;

    cell1.innerHTML = userRole;
    cell2.innerHTML = button;
    cell3.innerHTML = status;
    cell4.innerHTML = visibility;
}

// Additional functions like save to server can be added here

