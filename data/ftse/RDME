SELECT 
    S.session_id AS 'SessionID',
    S.login_name AS 'LoginName',
    S.host_name AS 'HostName',
    S.program_name AS 'ApplicationName',
    S.client_interface_name AS 'ClientInterfaceName',
    S.login_time AS 'LoginTime',
    S.is_user_process AS 'IsUserProcess',
    S.original_login_name AS 'OriginalLoginName',
    C.client_net_address AS 'ClientIPAddress',
    C.local_net_address AS 'ServerIPAddress',
    C.connect_time AS 'ConnectionTime',
    SUSER_NAME() AS 'SUSER_NAME',
    USER_NAME() AS 'DatabaseUserName',
    SYSTEM_USER AS 'SystemUserName',
    SESSION_USER AS 'SessionUserName',
    APP_NAME() AS 'AppName',
    HOST_NAME() AS 'HostNameFunction'
FROM 
    sys.dm_exec_sessions S
JOIN 
    sys.dm_exec_connections C
ON 
    S.session_id = C.session_id
WHERE 
    S.session_id = @@SPID;
